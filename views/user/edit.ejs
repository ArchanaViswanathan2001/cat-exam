<%- include ../layouts/header.ejs %>

	<% if (messages.error) { %>
		<p style="color:red"><%- messages.error %></p>
		<% } %>

			<% if (messages.success) { %>
				<p style="color:green"><%- messages.success %></p>
				<% } %>

					<form action="/users/edit/<%= id %>" method="post" name="form1">
						<table width="25%" border="0">
							<tr>
								<td>Id</td>
								<td><input type="text" class="form-control" name="id" id="id"
										value="<%= id %>" /></td>
							</tr>
							<tr>
								<td>Name</td>
								<td><input type="text" class="form-control" name="name" id="name"
										value="<%= name %>" /></td>
							</tr>


							<tr>
								<td>Designation</td>
								<td><input type="text" class="form-control" name="designation"
										value="<%= designation%>" /></td>
							</tr>




							<tr>
								<td>Department</td>
								<td><input type="text" class="form-control" name="department"
										value="<%= department %>" /></td>
							</tr>
							<tr>
								<td>Salary</details></td>
								<td><input type="text" class="form-control" name="salary"
										value="<%= salary %>" /></td>
							</tr>
							
							
							<tr>
								<td>Location</details></td>
								<td><input type="text" class="form-control" name="location"
										value="<%= location %>" /></td>
							</tr>
							<tr>
								<td></td>
								<td><input type="submit" name="Submit" value="Edit" /></td>
							</tr>
						</table>
						<input type="hidden" name="_method" value="PUT" />
					</form>

